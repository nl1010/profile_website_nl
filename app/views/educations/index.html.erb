<h1>Listing educations</h1>

<table>
  <thead>
    <tr>
      <th>Facility name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Subject</th>
      <th>Transcript</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.facility_name %></td>
        <td><%= education.start_date %></td>
        <td><%= education.end_date %></td>
        <td><%= education.subject %></td>
        <td><%= education.transcript %></td>
        <td><%= education.detail %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

